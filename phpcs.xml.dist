<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="laravel-gcp-firestore">
    <description>The coding standard of laravel-gcp-firestore package</description>
    <arg value="p"/>

    <config name="ignore_warnings_on_exit" value="1"/>
    <config name="ignore_errors_on_exit" value="1"/>

    <arg name="colors"/>
    <arg value="s"/>

    <!-- Use the PSR2 Standard -->
    <rule ref="PSR2"/>
</ruleset>
